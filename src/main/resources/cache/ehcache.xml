<config xmlns="http://www.ehcache.org/v3"
        xmlns:jc="http://www.ehcache.org/v3/jsr107">

  <service>
    <jc:defaults>
      <jc:cache name="vets" template="simple"/>
    </jc:defaults>
  </service>

  <cache-template name="simple">
    <expiry>
      <ttl unit="seconds">5</ttl>
    </expiry>
    <heap>10</heap>
  </cache-template>
</config>